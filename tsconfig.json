{
    "compilerOptions": {
        "rootDirs": ["src"],
        "outDir": "dist",
        "lib": ["es2020"],
        "target": "es2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
          "@/*": ["./src/*"],
          "@auth": [ "./src/auth" ],
          "@types": [ "./src/types" ],
          "@utils": [ "./src/utils" ],
          "@utils/*": [ "./src/utils/*" ],
        }
    },
    "ts-node": {
        "esm": true
    },
}
